{
  "manifest_version": 3,
  "name": "HEVC解码 - 强制启用",
  "description": "解锁 Edge 浏览器内置 HEVC 支持，防止不必要的视频转码，支持 飞牛影视、Emby 等媒体中心",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "强制启用 HEVC 解码"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
